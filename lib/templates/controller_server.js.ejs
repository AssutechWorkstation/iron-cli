<% if(realExtension === '.coffee') { %>
#
# <%= name %> Server Controller
#
<%= name %>Controller = RouteController.extend(action: ->
  @response.end "Hello World\n"
  return
)
<% } else { %>
/*****************************************************************************/
/* <%= name %> Server Controller */
/*****************************************************************************/
<%= name %>Controller = RouteController.extend({
  action: function () {
    this.response.end('Hello World\n');
  }
});
<% } %>
