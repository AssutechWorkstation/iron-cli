<% if(realExtension === '.coffee') { %>
#
# <%= name %> Client Controller
#
@<%= name %>Controller = RouteController.extend(
  waitOn: ->

  data: ->

  action: ->
    @render()
    return
)
<% } else { %>
/*****************************************************************************/
/* <%= name %> Client Controller */
/*****************************************************************************/
<%= name %>Controller = RouteController.extend({
  waitOn: function () {
  },

  data: function () {
  },

  action: function () {
    this.render();
  }
});
<% } %>
